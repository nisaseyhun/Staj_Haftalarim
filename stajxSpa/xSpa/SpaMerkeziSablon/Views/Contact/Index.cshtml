@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class=" row d-flex w-100 m-auto" id="iletisim">
    <div class="container">
        <div class="text-white text-center py-2 mt-4" style="background-color:black;">
            <h2 class="my-2" style="color: #e8cf8a;">İletişim Sayfası</h2>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d744.3487001228517!2d27.229005536967165!3d41.733576526031925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a753e639d4a8d7%3A0x3ca7ad2b0e8a72f8!2sWellness%20hamam%26spa!5e0!3m2!1str!2str!4v1715986036343!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <form method="post" id="contactForm">
                    <div class="card mt-4">
                        <div class="card-body p-3">
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text" style="background-color:black;">
                                            <i class="fa fa-user" style="color: #e8cf8a;"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" name="UserName" placeholder="Ad Soyad" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text" style="background-color:black;">
                                            <i class="fa fa-envelope" style="color: #e8cf8a;"></i>
                                        </div>
                                    </div>
                                    <input type="email" class="form-control" name="Mail" placeholder="E-Posta" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text" style="background-color:black;">
                                            <i class="fa fa-tag" style="color: #e8cf8a;"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" name="Title" placeholder="Konu Başlığı" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text" style="background-color:black;">
                                            <i class="fa fa-comment" style="color: #e8cf8a;"></i>
                                        </div>
                                    </div>
                                    <textarea class="form-control" name="Descriptions" placeholder="Lütfen Mesajınızı Buraya Yazın.." rows="6" required></textarea>
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="GÖNDER" class="btn btn-dark btn-block " style="color: #e8cf8a; background-color: black;">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div role="alert" id="alertBox"></div>

    <script>
        document.getElementById('contactForm').addEventListener('submit', function (event) {
            var alertBox = document.getElementById('alertBox');

            alertBox.style.position = "fixed";
            alertBox.style.left = "25%";
            alertBox.classList = "alert alert-success w-50 py-5 mx-auto"
            alertBox.style.textAlign = "center";
            alertBox.style.opacity = 0.8;
            alertBox.style.display = 'block';
            alertBox.textContent = 'Mesajınız başarıyla gönderilmiştir!';


            setTimeout(function () {
                alertBox.style.display = 'none';
            }, 10000);
        });
    </script>
</section>

