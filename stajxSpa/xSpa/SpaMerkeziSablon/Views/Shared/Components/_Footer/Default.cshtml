@model IEnumerable<Contact>


<link href="~/css/FooterCss.css" rel="stylesheet" />

<footer class="col-12 row-cols-1 row-cols-sm-2 row-cols-md-5 py-5 mt-5 border-top " style="background-color:black;">
    <div class="col-12 col-md-1">
    </div>
    <div class="col-12 col-md-6">
        <h5>İletişim Bilgileri</h5>
        @foreach (var item in Model)
        {
            <ul class="nav flex-column mb-4">
                <li class="nav-item mb-2">
                    <p class="text-light m-0" style="word-break: break-all;">
                        Adres: @item.Adres
                    </p>
                </li>
                <li class="nav-item mb-2"><p class="text-light m-0">Telefon: @item.Phone</p></li>
                <li class="nav-item mb-2"><p class="text-light m-0">E-posta: @item.Mail</p></li>
            </ul>
        }
    </div>

    <div class="col-12 col-md-5">
        <h5>Hızlı Bağlantılar</h5>
        <ul class="nav flex-column">
            <li class="nav-item mb-2"><a href="/Default/Index" class="nav-link p-0 text-light">Ana Sayfa</a></li>
            <li class="nav-item mb-2"><a href="/About/Index" class="nav-link p-0 text-light">Hakkımızda</a></li>
            <li class="nav-item mb-2"><a href="/Service/Index" class="nav-link p-0 text-light">Hizmetler</a></li>
            <li class="nav-item mb-2"><a href="/Blog/Index" class="nav-link p-0 text-light">Blog</a></li>
            <li class="nav-item mb-2"><a href="/Galary/Index" class="nav-link p-0 text-light">Galeri</a></li>
            <li class="nav-item mb-2"><a href="/Contact/Index" class="nav-link p-0 text-light">İletişim</a></li>
        </ul>
    </div>
</footer>
<div class="text-center">
    <p class="pb-4 #e8cf8a" style="color:#e8cf8a; background-color: black; ">Designer By KOZLOW</p>
</div>

